<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue1"
    tools:context=".Applications">

    <Button
        android:id="@+id/ApplicationButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent"
        android:text="Streaming Apps"
        android:textColor="@color/Aqua"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ApplicationButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ApplicationButton1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent"
        android:text="Mod Apps"
        android:textColor="@color/Aqua"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>